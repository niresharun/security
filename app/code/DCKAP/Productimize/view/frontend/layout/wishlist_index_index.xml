<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer.wishlist.item.image">
            <arguments>
                <argument name="type" xsi:type="string">helper</argument>
                <argument name="view_model" xsi:type="object">DCKAP\Productimize\ViewModel\PrepareHelperData</argument>
            </arguments>
            <action method="setTemplate">
                <argument name="template" xsi:type="string">DCKAP_Productimize::wishlist/item/column/image.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer.wishlist.item.options">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">DCKAP_Productimize::wishlist/item/options_list.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
