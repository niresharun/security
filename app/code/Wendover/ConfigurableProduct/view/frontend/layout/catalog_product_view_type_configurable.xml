<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="viewinroom" template="Wendover_ConfigurableProduct::view-in-room/buttons.phtml" before="alert.urls">
                <arguments>
                    <argument name="viewInRoom_model" xsi:type="object">Perficient\ViewInRoom\ViewModel\ViewInRoomViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="product.info.options.swatches">
            <arguments>
                <argument name="frame-view-model" xsi:type="object">Wendover\ConfigurableProduct\ViewModel\FrameViewModel</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
