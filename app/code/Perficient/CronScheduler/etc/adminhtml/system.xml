<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="cron_scheduler" translate="label" showInDefault="1" showInWebsite="0" showInStore="0" sortOrder="17">
                <label>Perficient Cron Scheduler</label>
                <field id="disabled_crons" translate="label" type="text" sortOrder="10" showInDefault="0" showInWebsite="0" showInStore="0">
                    <label>Disabled Cron Tasks</label>
                </field>
            </group>
        </section>
    </system>
</config>
