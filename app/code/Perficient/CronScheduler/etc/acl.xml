<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Perficient_CronScheduler::menu" title="Cron Scheduler" sortOrder="100000">
						<resource id="Perficient_CronScheduler::generate_schedule" title="Generate Schedules" sortOrder="10"/>
                        <resource id="Perficient_CronScheduler::job_listing" title="Jobs" sortOrder="20"/>
                        <resource id="Perficient_CronScheduler::task_listing" title="Tasks List" sortOrder="30"/>
                        <resource id="Perficient_CronScheduler::task_timeline" title="Tasks Timeline" sortOrder="40"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
