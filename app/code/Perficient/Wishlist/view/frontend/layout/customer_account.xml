<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-projects-shared-with-me">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Collaborated Projects</argument>
                    <argument name="path" xsi:type="string">wishlist/index/collaboration</argument>
                    <argument name="sortOrder" xsi:type="number">152</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="create-project-link">
                <arguments>
                    <argument name="path" xsi:type="string">wishlist/myprojects/index/action/create</argument>
                    <argument name="label" xsi:type="string" translate="true">Create a Project</argument>
                    <argument name="sortOrder" xsi:type="number">150</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
