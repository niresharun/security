<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <recaptcha_frontend>
            <type_for>
                <company_create/>
            </type_for>
        </recaptcha_frontend>
        <restrictcustomer>
            <cartcheckout>
                <is_enabled>1</is_enabled>
                <redirect_to>company/accessdenied</redirect_to>
            </cartcheckout>
        </restrictcustomer>
    </default>
</config>
