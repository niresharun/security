<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
     <body>
      <referenceContainer name="content">
          <block class="Magento\Cms\Block\Block" name="reset_password_steps" after="forgotPassword">
              <arguments>
                  <argument name="block_id" xsi:type="string">reset_password_steps</argument>
              </arguments>
          </block>
          </referenceContainer>
    </body>
</page>
