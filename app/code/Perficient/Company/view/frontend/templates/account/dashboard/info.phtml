        <strong class="box-title">
            <span><?= $block->escapeHtml(__('Wendover Customer Account Manager')) ?></span>
        </strong>
        <div class="box-content">
            <?php if(!empty($camname)): ?>
                <p>
                    <?= $block->escapeHtml($camname) ?><br>
                </p>
            <?php endif; ?>
            <?php if(!empty($camemail)): ?>
                <p>
                    <?= $block->escapeHtml($camemail) ?><br>
                </p>
            <?php endif; ?>
            <?php if(!empty($camphone)): ?>
                <p>
                    <?= $block->escapeHtml($camphone) ?><br>
                </p>
            <?php endif; ?>
        </div>
        <div class="box-actions"></div>
    </div>
<?php endif; ?>
