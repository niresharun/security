$customerRole = $block->getCurrentUserRole();
$checkValue = explode(' ',$block::CUSTOMER_CUSTOMER);

$explodedArr=explode(' ',$customerRole);
if(strcmp(end($explodedArr),end($checkValue))){
?>
<?php if(!empty($camname) || !empty($camphone) || !empty($camemail)): ?>
