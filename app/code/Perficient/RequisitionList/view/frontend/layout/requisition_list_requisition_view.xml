<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="requisition.list.export" remove="true"/>
        <referenceBlock name="requisition.list.toolbar">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">
                    Perficient_RequisitionList::requisition/view/items/toolbar.phtml
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="requisition.items.buttons">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">
                    Perficient_RequisitionList::requisition/view/items/buttons.phtml
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="requisition.list.title">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">
                    Perficient_RequisitionList::requisition/actions/rename.phtml
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="requisition.list.item.view">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">
                    Perficient_RequisitionList::requisition/view/items/item.phtml
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
